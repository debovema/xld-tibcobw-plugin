<rules xmlns="http://www.xebialabs.com/xl-deploy/xl-rules">

    <rule name="tibcobw.DeployedEar.CREATE_MODIFY" scope="deployed">
        <conditions>
            <type>tibcobw.DeployedEar</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <os-script>
                <order>70</order>
                <description expression="true">"Deploy %s to %s" % (deployed.name, deployed.container.name)</description>
                <script>tibcobw/deploy-artifact</script>
                <freemarker-context>
                    <targetDeployed expression="true">delta.deployed</targetDeployed>
                    <command>deploy</command>
                </freemarker-context>
                <upload-artifacts>false</upload-artifacts>
            </os-script>
        </steps>
    </rule>


    <rule name="tibcobw.DeployedEar.MODIFY_DESTROY" scope="deployed">
        <conditions>
            <type>tibcobw.DeployedEar</type>
            <operation>DESTROY</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <os-script>
                <order>30</order>
                <description expression="true">"Undeploy %s from %s" % (deployed.name, deployed.container.name)</description>
                <script>tibcobw/appmanage</script>
                <freemarker-context>
                    <targetDeployed expression="true">delta.previous</targetDeployed>
                    <command>undeploy</command>
                </freemarker-context>
                <upload-artifacts>false</upload-artifacts>
            </os-script>

        </steps>
    </rule>

    <rule name="tibcobw.DeployedEar.DESTROY" scope="deployed">
        <conditions>
            <type>tibcobw.DeployedEar</type>
            <operation>DESTROY</operation>
        </conditions>
        <steps>
            <os-script>
                <order>31</order>
                <description expression="true">"Delete %s" % (deployed.name)</description>
                <script>tibcobw/appmanage</script>
                <freemarker-context>
                    <targetDeployed expression="true">delta.previous</targetDeployed>
                    <command>delete</command>
                </freemarker-context>
                <upload-artifacts>false</upload-artifacts>
            </os-script>
        </steps>
    </rule>


    <rule name="tibcobw.DeployedConfiguration.CREATE_MODIFY" scope="deployed">
        <conditions>
            <type>tibcobw.DeployedConfiguration</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <os-script>
                <order>71</order>
                <description expression="true">"Deploy Configuration %s to %s" % (deployed.name, deployed.container.name)</description>
                <script>tibcobw/deploy-artifact-configuration</script>
                <freemarker-context>
                    <targetDeployed expression="true">delta.deployed</targetDeployed>
                    <command>deploy</command>
                </freemarker-context>
                <upload-artifacts>false</upload-artifacts>
            </os-script>
        </steps>
    </rule>

    <rule name="tibcobw.artifact.stop_and_start" scope="plan">
        <planning-script-path>tibcobw/start_stop_application.py</planning-script-path>
    </rule>


</rules>

